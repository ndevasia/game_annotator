{
  "name": "game-annotation-tool",
  "version": "1.0.0",
  "description": "Electron base app for gameplay annotation with live note-taking overlay.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "debug": "electron . -- --debug",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "dotenv": "^17.2.1",
    "ffi-rs": "^1.3.1",
    "obs-websocket-js": "^5.0.6"
  },
  "build": {
    "appId": "com.example.gameannotator",
    "productName": "GameAnnotator",
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    }
  }
}
